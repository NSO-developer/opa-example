<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device tags="nocreate">
      <name>{$PE}</name>
      <config>
        <policy-map xmlns="http://tail-f.com/ned/cisco-ios-xr" tags="merge">
          <name>{/name}</name>
          <class>
            <class-default>
              <map>class-default</map>
              <service-policy>
                <name>{$POLICY_NAME}</name>
              </service-policy>
            </class-default>
          </class>
        </policy-map>
        <policy-map xmlns="http://tail-f.com/ned/cisco-ios-xr" tags="merge">
          <name>{$POLICY_NAME}</name>
          <class>
            <class-ref>
              <map>{$CLASS_NAME}</map>
              <bandwidth>
                <bandwidth-units>
                  <rate>{$CLASS_BW}</rate>
                </bandwidth-units>
              </bandwidth>
              <priority>
                <level>1</level>
              </priority>
            </class-ref>
          </class>
        </policy-map>
      </config>
    </device>
  </devices>
</config-template>
